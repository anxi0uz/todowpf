<Window x:Class="todowpf.Windows.AddTodo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todowpf.Windows"
        mc:Ignorable="d"
        Title="AddTodo" Height="450" Width="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock>Добавить todo</TextBlock>
        <TextBox Grid.Row="1" Text="{Binding Name}"></TextBox>
        <TextBox Grid.Row="2" Text="{Binding Description}"></TextBox>
        <Button Grid.Row="3" Command="{Binding CreateTodoCommand}">Добавить </Button>
    </Grid>
</Window>
